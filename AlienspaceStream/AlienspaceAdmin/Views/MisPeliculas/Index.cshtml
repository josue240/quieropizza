@model IEnumerable<AlienspaceBL.Peliculas>

@{
    ViewBag.Title = "Peliculas";
}

<h2>Mis Peliculas</h2>

<p>
    @Html.ActionLink("Nueva Pelicula", "Crear")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Pelicula)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Categoria)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.UrlImagen)
        </th>

        <td></td>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Pelicula)
        </td>
     
        <td>
            @Html.DisplayFor(modelItem => item.Categoria.Pelicula)
        </td>

        <td>
           <img src="@item.UrlImagen" alt="@item.Pelicula" style="width:64px; height:auto;" />
        </td>

        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
